              "pm.test(\"Response on the third iteration\", function () {",
              "    pm.variables.set(\"currentIteration\", pm.info.iteration);",
              "    console.log(\"currentIteration\", pm.variables.get(\"currentIteration\"));",
              "    if(pm.variables.get(\"currentIteration\") === \"2\"){",
              "        pm.response.to.have.status(429);",
